<form id="uploadForm"
    enctype="multipart/form-data"
    action="/galleries/create"
    method="post"
    class="form-horizontal">
  <div class="form-group">
    <label for="gallery" class="col-sm-2 control-label">Gallery Name</label>
    <div class="col-sm-4">
      <input id="gallery" type="text" name="galleryname" placeholder='Gallery Name' class="form-control" />
    </div>
    <div class="col-sm-2">
    <label for="gallery" class="col-sm-2 control-label">Existing</label>
    </div>
    <div class="col-sm-4">
      <select name="galleryid" class="form-control">
        <option>Create New</option>
        {{#each galleries}}
          <option value="{{this._id}}">{{this.title}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="gallery" class="col-sm-2 control-label">Images</label>
    <div class="col-sm-10">
      <input type="file" class="form-control"  name="galleryPhotos" multiple />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-10 col-sm-2">
      <input type="submit" class="btn btn-primary btn-large"  value="Upload Image" name="submit">
    </div>
  </div>
</form>