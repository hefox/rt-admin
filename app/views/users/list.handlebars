
{{#if accounts }}

  <table class="table table-hover">
    <thead>
      <tr>
        <td>Name</td>
        <td>is Admin</td>
        <td>Util</td>
      </tr>
    </thead>
    <tbody>
      {{#each accounts as |account key|}}
        <tr>
          <td>
            <a href="/users/{{account._id}}">
              {{account.username}}
            </a>
          </td>
          <td>
            {{account.admin}}
          </td>
          <td>
            <a href="/users/{{account._id}}/edit">Edit</a> -
            <a href="/users/{{account._id}}/delete">Delete</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  {{#if showNext }}
    <a href="/galleries?after={{after}}&search={{search}}" class="btn btn-default" >Next</a>
  {{/if }}
{{else}}
  No galleries yet.
{{/if}}