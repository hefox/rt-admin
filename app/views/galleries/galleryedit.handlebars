<form id="uploadForm"
    enctype="multipart/form-data"
    action="/galleries/{{gallery._id}}/edit"
    method="post"
    class="form-horizontal">
  <div class="form-group">
    <label for="gallery-name" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      <input id="gallery-name" type="text" name="galleryTitle" placeholder='Gallery Title' class="form-control" value="{{gallery.title}}"/>
    </div>
  </div>
  <div class="form-group">
    <label for="gallery-date" class="col-sm-2 control-label">Date</label>
    <div class="col-sm-10">
      <input id="gallery-date" type="date" class="form-control"  name="galleryDate" value="{{date}}" />
    </div>
  </div>
  <div class="form-group">
    <label for="gallery-photos" class="col-sm-2 control-label">Images</label>
    <div class="col-sm-10">
      <input id="gallery-photos" type="file" class="form-control"  name="galleryPhotos" multiple />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2">
      <a href="/galleries/{{gallery._id}}" class="btn btn-default btn-large">Cancel</a>
    </div>
    <div class="col-sm-offset-8 col-sm-2">
      <input type="submit" class="btn btn-primary btn-large"  value="Update" name="submit">
    </div>
  </div>
</form>