<form id="local-sign-in" action="/login" method="post" class="form-inline">
  <div class="form-group">
    <label for="username">Username:</label>
    <input id="username" type="text" name="username" placeholder='Username' class="form-control" />
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input id="password" type="password" name="password" placeholder='Password' class="form-control" />
  </div>
  <div class="form-group">
    <input type="submit" class="btn btn-primary btn-sm" value="Log In" />
  </div>
</form>